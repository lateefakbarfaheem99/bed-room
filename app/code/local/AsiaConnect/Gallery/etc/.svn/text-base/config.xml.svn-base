<?xml version="1.0"?>
<config>
    <modules>
        <AsiaConnect_Gallery>
            <version>0.1.2</version>
        </AsiaConnect_Gallery>
    </modules>
    <frontend>
        <routers>
            <gallery>
                <use>standard</use>
                <args>
                    <module>AsiaConnect_Gallery</module>
                    <frontName>gallery</frontName>
                </args>
            </gallery>
        </routers>		
        <layout>
            <updates>
                <gallery>
                    <file>gallery.xml</file>
                </gallery>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<gallery_admin>
				<use>admin</use>
				<args>
					<module>AsiaConnect_Gallery</module>
					<frontName>gallery_admin</frontName>
				</args>
			</gallery_admin>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<gallery module="gallery">
				<title>Gallery</title>
				<sort_order>71</sort_order>               
				<children>
					<albums module="gallery">
						<title>Manage Albums</title>
						<sort_order>10</sort_order>
						<action>gallery_admin/admin_album</action>
					</albums>
					<photos module="gallery">
						<title>Manage Photos</title>
						<sort_order>20</sort_order>
						<action>gallery_admin/admin_gallery</action>
					</photos>
				</children>
			</gallery>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<gallery module="gallery">
							<title>Gallery</title>
							<sort_order>71</sort_order>               
							<children>
								<albums module="gallery">
									<title>Manage Albums</title>
									<sort_order>10</sort_order>
								</albums>
								<photos module="gallery">
									<title>Manage Photos</title>
									<sort_order>20</sort_order>
								</photos>
							</children>
						</gallery>
						<system>
                            <children>
                                <config>
                                    <children>
                                        <gallery translate="title" module="gallery">
                                            <title>Gallery</title>
                                        </gallery>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<gallery>
					<file>gallery.xml</file>
				</gallery>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <gallery>
                <class>AsiaConnect_Gallery_Model</class>
                <resourceModel>gallery_mysql4</resourceModel>
            </gallery>
            <gallery_mysql4>
                <class>AsiaConnect_Gallery_Model_Mysql4</class>
                <entities>
                    <gallery>
                        <table>gallery</table>
                    </gallery>
                    <album>
                        <table>gallery_album</table>
                    </album>
                </entities>
            </gallery_mysql4>
		</models>
        <resources>
            <gallery_setup>
                <setup>
                    <module>AsiaConnect_Gallery</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </gallery_setup>
            <gallery_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </gallery_write>
            <gallery_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </gallery_read>
        </resources>
        <blocks>
            <gallery>
                <class>AsiaConnect_Gallery_Block</class>
            </gallery>
        </blocks>
        <helpers>
            <gallery>
                <class>AsiaConnect_Gallery_Helper</class>
            </gallery>
        </helpers>
    </global>
	<default>
		<gallery>
			<info>
				<enabled>1</enabled>
				<album_suffix>.html</album_suffix>
				<photo_suffix>.html</photo_suffix>
			</info>
		</gallery>
	</default>
</config>