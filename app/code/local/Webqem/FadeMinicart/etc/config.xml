<?xml version="1.0"?>
<config>
    <modules>
        <Webqem_FadeMinicart>
            <version>1.0.0.0</version>
        </Webqem_FadeMinicart>
    </modules>
    <global>
        <models>
            <webqem_fademinicart>
                <class>Webqem_FadeMinicart_Model</class>
            </webqem_fademinicart>
        </models>
    </global>
    <frontend>
        <layout>
            <updates>
                <webqem_fademinicart>
                    <file>webqem_fademinicart.xml</file>
                </webqem_fademinicart>
            </updates>
        </layout>
        <events>
            <controller_action_postdispatch_checkout_cart_add>
                <observers>
                    <webqem_fademinicart_catch_cart_add>
                        <class>webqem_fademinicart/observer</class>
                        <method>catchCartAdd</method>
                    </webqem_fademinicart_catch_cart_add>
                </observers>
            </controller_action_postdispatch_checkout_cart_add>
        </events>
    </frontend>
</config>